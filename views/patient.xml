<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image" widget="image"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <field name="image" widget="image" class="oe_avatar"/>
                                <ul>
                                    <li>
                                        Name :
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Age :
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Gender :
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        Doctor :
                                        <field name="doctor"/>
                                    </li>
                                    <li>
                                        Description :
                                        <field name="note"/>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="%(change_status_action)d" string="Change Status"
                            class="btn-primary"
                            type="action"/>
                    <button name="print_info" type="object" string="Print" class="oe_highlight"/>
                </header>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="doctor"/>
                <field name="note"/>
                <field string="Appointments" name="appointment_count" widget="statinfo"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(change_status_action)d" string="Change Status"
                            class="oe_highlight"
                            type="action"/>
                    <button name="print_info" type="object" string="Print" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="doctor"/>
                            <field name="note"/>
                            <field string="Appointments" name="appointment_count" widget="statinfo"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patient">
                <field name="name"/>
                <field name="note"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <filter string="Other" name="other" domain="[('gender', '=', 'other')]"/>
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <!-- <filter string="Patient Name" name="patient_name" context="{'group_by':'name'}"/>
                     <filter string="Age" name="age" context="{'group_by':'age'}"/> -->
                </group>
            </search>
        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new patient
            </p>
        </field>
    </record>

    <menuitem id="hospital_root"
              name="Hospital"
              sequence="10"/>

    <menuitem id="hospital_patient_root"
              name="Patient"
              parent="hospital_root"
              sequence="10"/>

    <menuitem id="hospital_patient"
              name="Patients"
              parent="hospital_patient_root"
              action="patient_action"
              sequence="10"/>

</odoo>